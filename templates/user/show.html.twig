{% extends 'base.html.twig' %}

{% block title %}Single User{% endblock %}

{% block body %}
    <h1 class="text-center">{{ user.username }}</h1>

    <table class="table singleAd">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
        </tbody>
    </table>
    {% if app.user.username == user.username %}
        <a href="{{ path('user_index') }}">back to list</a>

        <a class="btn btn-block btn-outline-warning" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

        {{ include('user/_delete_form.html.twig') }}
    {% else %}
        <a href="{{ path('user_index') }}">back to list</a>
    {% endif %}
{% endblock %}

