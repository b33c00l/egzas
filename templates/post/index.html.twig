{% extends 'base.html.twig' %}

{% block title %}Index{% endblock %}

{% block body %}
    <h1 class="text-center mb-3">Your Posts</h1>
    {% for post in posts %}
        <div class="row">
            <div class="col-12 text-center">
                <a href="{{ path('post_show', {'id': post.id}) }}">
                    <h5>Title: {{ post.title }}</h5>
                </a>
            </div>
            <div class="col-3 singleAd">
                <p><i>Posted by:{{ post.user.username }}</i></p>
                <p><i>Post date:{{ post.date ? post.date|date('Y-m-d H:i:s') : '' }}</i></p>
            </div>
            <div class="col-9 singleAd">
                <p>Description: {{ post.description }}</p>
            </div>
        </div>
        <div class="row justify-content-start mt-1">
            <a class="btn-sm btn-warning mr-1" href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
            {{ include('post/_delete_form.html.twig') }}
        </div>
    {% else %}
        <p>no records found</p>
    {% endfor %}
{% endblock %}