{% extends 'base.html.twig' %}

{% block title %}Single Post{% endblock %}

{% block body %}
    <h1 class="text-center">{{ post.title }}</h1>

    <table class="table singleAd">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ post.id }}</td>
        </tr>
        <tr>
            <th>Posted by</th>
            <td>{{ post.user.username }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ post.title }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ post.description }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ post.date ? post.date|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <a class="btn btn-block btn-outline-warning" href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
    <a href="{{ path('post_index') }}">back to list</a>

{% endblock %}