{% extends 'base.html.twig' %}

{% block title %}Single Post{% endblock %}

{% block body %}
    <h1 class="text-center">{{ post.title }}</h1>

    <table class="table singleAd">
        <tbody>
        <tr>
            <th>Posted by</th>
            {% if app.user.username == post.user.username %}
                <td><a href="{{ path('post_index') }}">{{ post.user.username }}</a></td>
            {% else %}
                <td>{{ post.user.username }}</td>
            {% endif %}
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ post.date ? post.date|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ post.description }}</td>
        </tr>

        </tbody>
    </table>

    <a href="{{ path('home') }}">back to list</a>

{% endblock %}